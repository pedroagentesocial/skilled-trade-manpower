---
import { getLangFromUrl, useTranslations } from '../utils/i18n';
import { icons } from '../utils/icons';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services = [
  { key: 'recruiting', icon: 'magnifying-glass' },
  { key: 'skilledTrades', icon: 'tools' },
  { key: 'construction', icon: 'building-office' },
  { key: 'healthcare', icon: 'heart' },
  { key: 'technology', icon: 'computer-desktop' },
  { key: 'generalLabor', icon: 'cube' },
  { key: 'sales', icon: 'chart-bar' },
  { key: 'socialMedia', icon: 'device-phone-mobile' },
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{t('services.title')}</h2>
      <div class="w-24 h-1 bg-blue-600 mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="bg-gray-50 rounded-lg p-6 hover:shadow-lg transition-shadow border border-gray-100">
          <div class="mb-4" set:html={icons[service.icon as keyof typeof icons]}></div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t(`services.${service.key}.title`)}</h3>
          <p class="text-gray-600">{t(`services.${service.key}.desc`)}</p>
        </div>
      ))}
    </div>
  </div>
</section>
