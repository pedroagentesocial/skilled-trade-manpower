---
import Layout from '../../layouts/Layout.astro';
import LeadForm from '../../components/LeadForm.astro';
import { useTranslations } from '../../utils/i18n';
import { icons } from '../../utils/icons';

const t = useTranslations('es');
---

<Layout title="Contacto">
  <div class="bg-blue-900 py-24 text-white text-center relative overflow-hidden">
     <!-- Background Elements -->
     <div class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
        <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
            <path d="M0 0 L100 100 L0 100 Z" fill="white" />
        </svg>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Contáctenos</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Discuta su proyecto con nuestro equipo de ejecución.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 max-w-6xl mx-auto">
      <div>
        <div class="bg-blue-50 rounded-3xl p-8 md:p-12 relative overflow-hidden">
             <div class="absolute top-0 right-0 w-32 h-32 bg-blue-100 rounded-bl-full -mr-8 -mt-8 opacity-50"></div>
            
            <h2 class="text-3xl font-bold text-gray-900 mb-8 relative z-10">Póngase en Contacto</h2>
            <div class="space-y-8 relative z-10">
            <div class="flex items-start group">
                <div class="flex-shrink-0 w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform duration-300">
                    <span class="w-6 h-6" set:html={icons['map-pin']}></span>
                </div>
                <div class="ml-6">
                <h3 class="text-lg font-bold text-gray-900 mb-1">Dirección</h3>
                <p class="text-gray-600 leading-relaxed">
                    271 Cottonwood Drive<br />
                    Centerville, Utah 84014
                </p>
                </div>
            </div>

            <div class="flex items-start group">
                 <div class="flex-shrink-0 w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform duration-300">
                    <span class="w-6 h-6" set:html={icons.phone}></span>
                </div>
                <div class="ml-6">
                <h3 class="text-lg font-bold text-gray-900 mb-1">Teléfono</h3>
                <p class="text-gray-600">
                    <a href="tel:3854012255" class="hover:text-blue-600 transition-colors font-medium">385 401 22 55</a>
                </p>
                </div>
            </div>

            <div class="flex items-start group">
                 <div class="flex-shrink-0 w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform duration-300">
                    <span class="w-6 h-6" set:html={icons.envelope}></span>
                </div>
                <div class="ml-6">
                <h3 class="text-lg font-bold text-gray-900 mb-1">Correo Electrónico</h3>
                <p class="text-gray-600">
                    <a href="mailto:info@skilledtrademanpower.com" class="hover:text-blue-600 transition-colors font-medium">info@skilledtrademanpower.com</a>
                </p>
                </div>
            </div>
            
            <div class="flex items-start group">
                 <div class="flex-shrink-0 w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform duration-300">
                    <span class="w-6 h-6" set:html={icons.clock}></span>
                </div>
                <div class="ml-6">
                <h3 class="text-lg font-bold text-gray-900 mb-1">Horario</h3>
                <p class="text-gray-600 leading-relaxed">
                    Lunes - Viernes: 8:00 AM - 5:00 PM<br />
                    Sábado - Domingo: Cerrado
                </p>
                </div>
            </div>
            </div>
        </div>
      </div>

      <div class="bg-white p-8 md:p-10 rounded-3xl shadow-xl border border-gray-100 relative">
        <LeadForm />
      </div>
    </div>
  </div>
</Layout>
