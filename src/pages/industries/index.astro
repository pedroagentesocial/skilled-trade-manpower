---
import Layout from '../../layouts/Layout.astro';
import IndustryCards from '../../components/IndustryCards.astro';
import CTASection from '../../components/CTASection.astro';
import { useTranslations } from '../../utils/i18n';

const t = useTranslations('en');
---

<Layout title="Industries">
  <div class="bg-blue-900 py-16 text-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">{t('industries.title')}</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Specialized staffing solutions for Utah's key sectors.
      </p>
    </div>
  </div>

  <IndustryCards />

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 text-center max-w-4xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Industry Specialization Matters</h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        We understand that every industry has unique requirements, safety standards, and skill sets. 
        By organizing our teams into specialized divisions, we ensure that our recruiters speak your language 
        and understand the specific challenges you face. Whether you need a certified welder, a registered nurse, 
        or a Python developer, we know where to find them and how to vet them.
      </p>
    </div>
  </section>

  <CTASection 
    title="Ready to find talent in your industry?"
    subtitle="Contact our industry specialists today."
    primaryText="Get Started"
    primaryHref="/employers"
  />
</Layout>
