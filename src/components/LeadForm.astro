---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="bg-white p-6 md:p-8 rounded-lg shadow-lg border border-gray-100 w-full">
  <h2 class="text-2xl font-bold text-gray-900 mb-2">{t('forms.contact.title')}</h2>
  <p class="text-gray-600 mb-6">{t('forms.contact.subtitle')}</p>
  
  <form class="space-y-4" method="POST">
    <div>
      <label for="company" class="block text-sm font-medium text-gray-700 mb-1">{t('forms.contact.company')}</label>
      <input type="text" id="company" name="company" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">{t('forms.contact.name')}</label>
      <input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-1">{t('forms.contact.email')}</label>
      <input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <div>
      <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">{t('forms.contact.phone')}</label>
      <input type="tel" id="phone" name="phone" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <div>
      <label for="projectType" class="block text-sm font-medium text-gray-700 mb-1">{t('forms.contact.projectType')}</label>
      <select id="projectType" name="projectType" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
         <option value="recruiting">{t('forms.contact.projectTypeOptions.recruiting')}</option>
         <option value="socialHiring">{t('forms.contact.projectTypeOptions.socialHiring')}</option>
         <option value="salesTeams">{t('forms.contact.projectTypeOptions.salesTeams')}</option>
         <option value="skilledLabor">{t('forms.contact.projectTypeOptions.skilledLabor')}</option>
         <option value="other">{t('forms.contact.projectTypeOptions.other')}</option>
      </select>
    </div>

    <div>
      <label for="scope" class="block text-sm font-medium text-gray-700 mb-1">{t('forms.contact.scope')}</label>
      <textarea id="scope" name="scope" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"></textarea>
    </div>

    <div>
      <label for="timeline" class="block text-sm font-medium text-gray-700 mb-1">{t('forms.contact.timeline')}</label>
      <input type="text" id="timeline" name="timeline" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <button type="submit" class="w-full bg-blue-600 text-white font-bold py-3 px-4 rounded-md hover:bg-blue-700 transition-colors mt-6">
      {t('buttons.submit')}
    </button>
  </form>
</div>
