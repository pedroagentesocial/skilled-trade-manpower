---
import Layout from '../layouts/Layout.astro';
import CTASection from '../components/CTASection.astro';
import { useTranslations } from '../utils/i18n';
import { icons } from '../utils/icons';

const t = useTranslations('en');

const servicesList = [
  { key: 'projectExecution', icon: 'clipboard-document-check' },
  { key: 'fieldOps', icon: 'truck' },
  { key: 'installation', icon: 'tools' },
  { key: 'maintenance', icon: 'cog-6-tooth' },
  { key: 'workforce', icon: 'chart-bar' },
  { key: 'specialProjects', icon: 'sparkles' },
];
---

<Layout title="Services">
  <div class="bg-blue-900 py-16 text-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">{t('services.title')}</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Done-For-You execution services. We manage the process, the people, and the outcome.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      {servicesList.map(service => (
        <div class="bg-white p-8 rounded-lg shadow-md border border-gray-100 flex flex-col h-full">
          <div class="mb-6" set:html={icons[service.icon as keyof typeof icons]}></div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(`services.${service.key}.title`)}</h2>
          <p class="text-gray-600 mb-6 flex-grow text-lg">{t(`services.${service.key}.desc`)}</p>
          
          <div class="mt-4 pt-6 border-t border-gray-100">
            <h3 class="font-bold text-gray-900 mb-2">How we help</h3>
            <p class="text-gray-600">We deploy a managed team to execute this function, taking the burden of supervision and logistics off your plate.</p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <CTASection 
    title="Need a custom solution?"
    subtitle="We can tailor our services to fit your unique requirements."
    primaryText="Contact Us"
    primaryHref="/contact"
  />
</Layout>
