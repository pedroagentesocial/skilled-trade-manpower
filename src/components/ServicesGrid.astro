---
import { getLangFromUrl, useTranslations, getTranslatedPath } from '../utils/i18n';
import { icons } from '../utils/icons';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services = [
  { key: 'recruiting', icon: 'magnifying-glass' },
  { key: 'socialHiring', icon: 'computer-desktop' },
  { key: 'salesTeams', icon: 'chart-bar' },
  { key: 'skilledLabor', icon: 'tools' },
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{t('home.servicesOverview.title')}</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{t('home.servicesOverview.subtitle')}</p>
      <div class="w-24 h-1 bg-blue-600 mx-auto mt-4"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <a href={getTranslatedPath('services', lang)} class="bg-blue-50 rounded-lg p-6 hover:shadow-lg transition-all border border-blue-100 flex flex-col items-center text-center group h-full">
          <div class="flex justify-center mb-4 text-blue-600 group-hover:scale-110 transition-transform duration-300" set:html={icons[service.icon as keyof typeof icons]}></div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600">{t(`services.${service.key}.title`)}</h3>
          <p class="text-gray-600">{t(`services.${service.key}.desc`)}</p>
        </a>
      ))}
    </div>
  </div>
</section>
