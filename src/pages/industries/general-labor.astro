---
import Layout from '../../layouts/Layout.astro';
import CTASection from '../../components/CTASection.astro';
import { useTranslations } from '../../utils/i18n';

const t = useTranslations('en');

const roles = [
  "Warehouse Associates",
  "Forklift Operators",
  "Assembly Line Workers",
  "Landscaping Crew",
  "Event Staff"
];
---

<Layout title="General Labor Staffing">
  <div class="bg-blue-900 py-16 text-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">{t('industries.generalLabor')} Staffing</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Flexible, reliable workforce for your operational needs.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-16">
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Staffing Challenges in General Labor</h2>
        <p class="text-lg text-gray-600 mb-4">
          High volume and high turnover can disrupt productivity. Managing large seasonal fluctuations 
          requires a staffing partner who can scale up or down quickly.
        </p>
        <h3 class="text-2xl font-bold text-gray-900 mb-4 mt-8">How We Solve Them</h3>
        <p class="text-lg text-gray-600">
          We maintain a large roster of pre-screened workers ready for dispatch. 
          Our focus on reliability and punctuality ensures you have the hands you need to get the job done.
        </p>
      </div>
      <div>
        <img src="https://images.unsplash.com/photo-1587293852726-70cdb56c2866?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Warehouse worker" class="rounded-lg shadow-xl" />
      </div>
    </div>

    <div class="bg-gray-50 rounded-lg p-8 border border-gray-100">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Typical Roles We Fill</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {roles.map(role => (
          <div class="bg-white p-4 rounded shadow text-center font-medium text-blue-900">
            {role}
          </div>
        ))}
      </div>
    </div>
  </div>

  <CTASection 
    title="Need General Labor?"
    subtitle="Get reliable workers today."
    primaryText="Request Staff"
    primaryHref="/employers"
  />
</Layout>
