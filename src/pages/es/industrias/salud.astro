---
import Layout from '../../../layouts/Layout.astro';
import ContactCTA from '../../../components/ContactCTA.astro';
import { useTranslations, getLangFromUrl, getTranslatedPath } from '../../../utils/i18n';
import { icons } from '../../../utils/icons';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const industryKey = 'healthcare';
const roles = [0, 1, 2, 3];
---

<Layout title={t(`industries.${industryKey}.title`)}>
  <div class="bg-blue-900 py-20 text-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">{t(`industries.${industryKey}.title`)}</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        {t(`industries.${industryKey}.desc`)}
      </p>
    </div>
  </div>

  <div class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-20">
        <div class="bg-blue-50 p-8 rounded-xl">
            <div class="mb-4 text-blue-600">
                <span class="w-12 h-12 block" set:html={icons['computer-desktop']}></span>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('industries.common.valuePropTitle')}</h2>
            <p class="text-gray-700 leading-relaxed">
                {t('industries.common.valuePropDesc')}
            </p>
        </div>
        <div class="bg-green-50 p-8 rounded-xl">
             <div class="mb-4 text-green-600">
                <span class="w-12 h-12 block" set:html={icons['shield-check']}></span>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('industries.common.screeningTitle')}</h2>
            <p class="text-gray-700 leading-relaxed">
                {t('industries.common.screeningDesc')}
            </p>
        </div>
      </div>

      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Roles TÃ­picos</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {roles.map(i => (
                <div class="flex items-center p-4 border border-gray-200 rounded-lg hover:border-blue-500 transition-colors bg-white shadow-sm">
                    <span class="text-blue-500 mr-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </span>
                    <span class="text-lg font-medium text-gray-800">{t(`industries.${industryKey}.roles.${i}`)}</span>
                </div>
            ))}
        </div>
      </div>
    </div>
  </div>

  <ContactCTA 
    title={t('home.hero.ctaPrimary')}
    subtitle={t('forms.contact.subtitle')}
    primaryText={t('buttons.requestTalent')}
    primaryHref={getTranslatedPath('contact', lang)}
  />
</Layout>
