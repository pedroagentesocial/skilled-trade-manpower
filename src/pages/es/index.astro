---
import Layout from '../../layouts/Layout.astro';
import HeroSplit from '../../components/HeroSplit.astro';
import ServicesGrid from '../../components/ServicesGrid.astro';
import ProofBar from '../../components/ProofBar.astro';
import TestimonialGrid from '../../components/TestimonialGrid.astro';
import CTASection from '../../components/CTASection.astro';
import { useTranslations } from '../../utils/i18n';
import { icons } from '../../utils/icons';

const t = useTranslations('es');
---

<Layout title="Inicio">
  <HeroSplit
    title={t('home.hero.title')}
    subtitle={t('home.hero.subtitle')}
    primaryCta={{ text: t('home.hero.ctaPrimary'), href: '/es/contacto' }}
    secondaryCta={{ text: t('home.hero.ctaSecondary'), href: '/es/como-funciona' }}
    imageSrc="https://images.unsplash.com/photo-1504307651254-35680f356dfd?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80"
  />
  
  <ProofBar />

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">¿Por Qué Elegirnos?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="flex justify-center mb-4" set:html={icons.bolt}></div>
          <h3 class="text-xl font-bold mb-2">Despliegue Rápido</h3>
          <p class="text-gray-600">Podemos movilizar equipos en 24-48 horas para proyectos urgentes.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="flex justify-center mb-4" set:html={icons['shield-check']}></div>
          <h3 class="text-xl font-bold mb-2">Cero Responsabilidad</h3>
          <p class="text-gray-600">Manejamos todos los seguros, compensación laboral e impuestos de nómina.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="flex justify-center mb-4" set:html={icons['check-badge']}></div>
          <h3 class="text-xl font-bold mb-2">Calidad Garantizada</h3>
          <p class="text-gray-600">Nuestros supervisores en el sitio aseguran que el trabajo cumpla con sus estándares.</p>
        </div>
      </div>
    </div>
  </section>
  
  <ServicesGrid />
  
  <TestimonialGrid />
  
  <CTASection 
    title="¿Listo para delegar su proyecto?"
    subtitle="Permítanos encargarnos de la ejecución para que pueda concentrarse en su negocio."
    primaryText="Iniciar Proyecto"
    primaryHref="/es/contacto"
  />
</Layout>
