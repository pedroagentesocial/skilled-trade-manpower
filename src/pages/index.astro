---
import Layout from '../layouts/Layout.astro';
import HeroSplit from '../components/HeroSplit.astro';
import ServicesGrid from '../components/ServicesGrid.astro';
import ProofBar from '../components/ProofBar.astro';
import TestimonialGrid from '../components/TestimonialGrid.astro';
import CTASection from '../components/CTASection.astro';
import { useTranslations } from '../utils/i18n';

const t = useTranslations('en');
---

<Layout title="Home">
  <HeroSplit
    title={t('home.hero.title')}
    subtitle={t('home.hero.subtitle')}
    primaryCta={{ text: t('home.hero.ctaPrimary'), href: '/contact' }}
    secondaryCta={{ text: t('home.hero.ctaSecondary'), href: '/how-it-works' }}
    imageSrc="https://images.unsplash.com/photo-1504307651254-35680f356dfd?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80"
  />
  
  <ProofBar />

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Why Choose Us?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="text-blue-600 text-4xl mb-4">‚ö°</div>
          <h3 class="text-xl font-bold mb-2">Fast Deployment</h3>
          <p class="text-gray-600">We can mobilize teams within 24-48 hours for urgent projects.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="text-blue-600 text-4xl mb-4">üõ°Ô∏è</div>
          <h3 class="text-xl font-bold mb-2">Zero Liability</h3>
          <p class="text-gray-600">We handle all insurance, workers' comp, and payroll taxes.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="text-blue-600 text-4xl mb-4">‚úÖ</div>
          <h3 class="text-xl font-bold mb-2">Quality Guaranteed</h3>
          <p class="text-gray-600">Our on-site supervisors ensure work meets your standards.</p>
        </div>
      </div>
    </div>
  </section>
  
  <ServicesGrid />
  
  <TestimonialGrid />
  
  <CTASection 
    title="Ready to Delegate Your Project?"
    subtitle="Let us handle the execution so you can focus on your business."
    primaryText="Start Your Project"
    primaryHref="/contact"
  />
</Layout>
