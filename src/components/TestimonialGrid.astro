---
import { icons } from '../utils/icons';

const testimonials = [
  {
    quote: "Skilled Trade Manpower provided us with excellent workers exactly when we needed them. Their vetting process is top-notch.",
    author: "John D.",
    role: "Construction Manager",
    image: "https://randomuser.me/api/portraits/men/32.jpg"
  },
  {
    quote: "I found a great job within days of applying. The team was supportive and helped me find a role that matched my skills.",
    author: "Maria S.",
    role: "Healthcare Assistant",
    image: "https://randomuser.me/api/portraits/women/44.jpg"
  },
  {
    quote: "Professional, reliable, and quick. They understand the tech industry's needs.",
    author: "Sarah J.",
    role: "HR Director, Tech Solutions Inc.",
    image: "https://randomuser.me/api/portraits/women/68.jpg"
  }
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">What People Say</h2>
      <div class="flex items-center justify-center gap-2 text-gray-600">
        <span class="w-5 h-5" set:html={icons.google}></span>
        <span class="font-medium">Rated 4.9/5 on Google Reviews</span>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map(t => (
        <div class="bg-gray-50 p-6 rounded-lg shadow-sm border border-gray-100 flex flex-col h-full">
          <div class="flex items-center gap-4 mb-4">
            <img src={t.image} alt={t.author} class="w-12 h-12 rounded-full object-cover border-2 border-white shadow-sm" />
            <div>
              <div class="font-bold text-gray-900">{t.author}</div>
              <div class="text-sm text-gray-500">{t.role}</div>
            </div>
          </div>
          <div class="flex mb-4">
            {[1, 2, 3, 4, 5].map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <p class="text-gray-600 italic flex-grow">"{t.quote}"</p>
          <div class="mt-4 flex items-center gap-1 text-xs text-gray-400">
            <span class="w-4 h-4 grayscale opacity-60" set:html={icons.google}></span>
            <span>Posted on Google</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
