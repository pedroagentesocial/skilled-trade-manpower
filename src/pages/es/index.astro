---
import Layout from '../../layouts/Layout.astro';
import HeroSplit from '../../components/HeroSplit.astro';
import ServicesGrid from '../../components/ServicesGrid.astro';
import IndustryCards from '../../components/IndustryCards.astro';
import ProofBar from '../../components/ProofBar.astro';
import TestimonialGrid from '../../components/TestimonialGrid.astro';
import CTASection from '../../components/CTASection.astro';
import { useTranslations } from '../../utils/i18n';

const t = useTranslations('es');
---

<Layout title="Inicio">
  <HeroSplit
    title={t('home.hero.title')}
    subtitle={t('home.hero.subtitle')}
    primaryCta={{ text: t('home.hero.ctaPrimary'), href: '/es/empleadores' }}
    secondaryCta={{ text: t('home.hero.ctaSecondary'), href: '/es/candidatos' }}
    imageSrc="https://images.unsplash.com/photo-1504307651254-35680f356dfd?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80"
  />
  
  <ProofBar />
  
  <ServicesGrid />
  
  <IndustryCards />
  
  <TestimonialGrid />
  
  <CTASection 
    title="¿Listo para empezar?"
    subtitle="Ya sea que necesite trabajadores o esté buscando trabajo, tenemos la solución."
    primaryText="Contáctenos Hoy"
    primaryHref="/es/contacto"
  />
</Layout>
