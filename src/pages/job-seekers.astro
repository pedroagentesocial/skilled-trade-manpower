---
import Layout from '../layouts/Layout.astro';
import LeadForm from '../components/LeadForm.astro';
import { useTranslations } from '../utils/i18n';

const t = useTranslations('en');
---

<Layout title="Job Seekers - Find Work">
  <div class="bg-blue-900 py-16 text-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">{t('forms.jobSeekers.title')}</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Looking for your next opportunity? We connect you with top employers in Utah.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16 flex flex-col md:flex-row gap-12">
    <div class="md:w-1/2">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Benefits for Job Seekers</h2>
      <ul class="space-y-4 text-lg text-gray-700">
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span><strong>Free Service:</strong> We never charge job seekers for our services.</span>
        </li>
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span><strong>Great Pay:</strong> Competitive wages and weekly pay options.</span>
        </li>
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span><strong>Variety:</strong> Access to jobs in multiple industries.</span>
        </li>
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span><strong>Career Growth:</strong> Opportunities for training and advancement.</span>
        </li>
      </ul>
      
      <div class="mt-8">
        <h3 class="font-bold text-gray-900 mb-4 text-xl">How It Works</h3>
        <ol class="relative border-l border-gray-200 ml-3 space-y-8">
          <li class="mb-10 ml-6">
            <span class="absolute flex items-center justify-center w-8 h-8 bg-blue-100 rounded-full -left-4 ring-8 ring-white text-blue-600 font-bold">1</span>
            <h4 class="font-bold text-lg mb-1">Apply Online</h4>
            <p class="text-gray-600">Fill out the form on this page or browse our open positions.</p>
          </li>
          <li class="mb-10 ml-6">
            <span class="absolute flex items-center justify-center w-8 h-8 bg-blue-100 rounded-full -left-4 ring-8 ring-white text-blue-600 font-bold">2</span>
            <h4 class="font-bold text-lg mb-1">Interview</h4>
            <p class="text-gray-600">Talk to one of our recruiters about your skills and goals.</p>
          </li>
          <li class="ml-6">
            <span class="absolute flex items-center justify-center w-8 h-8 bg-blue-100 rounded-full -left-4 ring-8 ring-white text-blue-600 font-bold">3</span>
            <h4 class="font-bold text-lg mb-1">Get Hired</h4>
            <p class="text-gray-600">Start working at a job that fits your needs.</p>
          </li>
        </ol>
      </div>
    </div>
    
    <div class="md:w-1/2">
      <LeadForm type="jobSeekers" />
    </div>
  </div>
</Layout>
