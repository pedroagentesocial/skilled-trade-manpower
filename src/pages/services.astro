---
import Layout from '../layouts/Layout.astro';
import CTASection from '../components/CTASection.astro';
import { useTranslations } from '../utils/i18n';
import { icons } from '../utils/icons';

const t = useTranslations('en');

const servicesList = [
  { key: 'recruiting', icon: 'magnifying-glass' },
  { key: 'skilledTrades', icon: 'tools' },
  { key: 'construction', icon: 'building-office' },
  { key: 'healthcare', icon: 'heart' },
  { key: 'technology', icon: 'computer-desktop' },
  { key: 'generalLabor', icon: 'cube' },
  { key: 'sales', icon: 'chart-bar' },
  { key: 'socialMedia', icon: 'device-phone-mobile' },
];
---

<Layout title="Services">
  <div class="bg-blue-900 py-16 text-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">{t('services.title')}</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Comprehensive workforce solutions tailored to your industry needs.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      {servicesList.map(service => (
        <div class="bg-white p-8 rounded-lg shadow-md border border-gray-100 flex flex-col h-full">
          <div class="mb-6" set:html={icons[service.icon as keyof typeof icons]}></div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(`services.${service.key}.title`)}</h2>
          <p class="text-gray-600 mb-6 flex-grow text-lg">{t(`services.${service.key}.desc`)}</p>
          
          <div class="mt-4 pt-6 border-t border-gray-100">
            <h3 class="font-bold text-gray-900 mb-2">Who is this for?</h3>
            <p class="text-gray-600 mb-4">Businesses looking to scale their workforce efficiently and candidates seeking {t(`services.${service.key}.title`).toLowerCase()} roles.</p>
            
            <h3 class="font-bold text-gray-900 mb-2">How we deliver</h3>
            <p class="text-gray-600">We use a combination of local networking, digital recruiting, and rigorous vetting to ensure high-quality matches.</p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <CTASection 
    title="Need a custom solution?"
    subtitle="We can tailor our services to fit your unique requirements."
    primaryText="Contact Us"
    primaryHref="/contact"
  />
</Layout>
