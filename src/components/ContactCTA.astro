---
import { getLangFromUrl, useTranslations } from '../utils/i18n';
import { icons } from '../utils/icons';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
  title: string;
  subtitle: string;
  primaryHref: string;
  primaryText: string;
}

const { 
  title, 
  subtitle,
  primaryHref,
  primaryText
} = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="bg-blue-900 rounded-3xl overflow-hidden shadow-2xl flex flex-col lg:flex-row relative">
      <!-- Background Pattern (Optional) -->
      <div class="absolute inset-0 opacity-10 pointer-events-none">
        <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
            <path d="M0 100 L100 0 L100 100 Z" fill="white" />
        </svg>
      </div>

      <!-- Left Content: CTA -->
      <div class="flex-1 p-8 md:p-12 lg:p-16 flex flex-col justify-center relative z-10 text-center lg:text-left">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 leading-tight">
          {title}
        </h2>
        <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto lg:mx-0">
          {subtitle}
        </p>
        <div>
          <a href={import.meta.env.BASE_URL === '/' ? primaryHref : `${import.meta.env.BASE_URL.replace(/\/$/, '')}/${primaryHref.startsWith('/') ? primaryHref.slice(1) : primaryHref}`} class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-900 font-bold rounded-lg text-lg hover:bg-blue-50 transition-transform transform hover:-translate-y-1 shadow-lg">
            {primaryText}
          </a>
        </div>
      </div>

      <!-- Right Content: Company Info -->
      <div class="lg:w-1/3 bg-blue-800 p-8 md:p-12 flex flex-col justify-center text-white relative z-10 border-t lg:border-t-0 lg:border-l border-blue-700">
        <h3 class="text-xl font-bold mb-8 flex items-center gap-2 justify-center lg:justify-start">
            <span class="text-blue-300">Skilled Trade Manpower</span>
        </h3>
        
        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-blue-700 flex items-center justify-center flex-shrink-0 text-blue-200">
                <span class="w-5 h-5 flex justify-center items-center [&>svg]:w-full [&>svg]:h-full" set:html={icons.phone}></span>
            </div>
            <div>
              <p class="text-sm text-blue-300 uppercase font-semibold tracking-wider mb-1">{t('forms.contact.phone')}</p>
              <a href="tel:3854012255" class="text-lg font-medium hover:text-white transition-colors">385 401 22 55</a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-full bg-blue-700 flex items-center justify-center flex-shrink-0 text-blue-200">
                <span class="w-5 h-5 flex justify-center items-center [&>svg]:w-full [&>svg]:h-full" set:html={icons['map-pin']}></span>
            </div>
            <div>
              <p class="text-sm text-blue-300 uppercase font-semibold tracking-wider mb-1">{t('nav.contact')}</p>
              <address class="text-lg font-medium not-italic">
                271 Cottonwood Drive<br/>Centerville, Utah 84014
              </address>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
             <div class="w-10 h-10 rounded-full bg-blue-700 flex items-center justify-center flex-shrink-0 text-blue-200">
                <span class="w-5 h-5 flex justify-center items-center [&>svg]:w-full [&>svg]:h-full" set:html={icons.envelope}></span>
            </div>
             <div>
               <p class="text-sm text-blue-300 uppercase font-semibold tracking-wider mb-1">{t('forms.contact.email')}</p>
               <a href="mailto:info@skilledtrademanpower.com" class="text-lg font-medium hover:text-white transition-colors">info@skilledtrademanpower.com</a>
             </div>
          </div>
        </div>

        <!-- Socials -->
        <div class="mt-8 pt-8 border-t border-blue-700 flex gap-4 justify-center lg:justify-start">
            <a href="#" class="w-10 h-10 rounded-full bg-blue-900/50 flex items-center justify-center text-white hover:bg-white hover:text-blue-900 transition-all" aria-label="LinkedIn">
                <span class="w-5 h-5 block" set:html={icons.linkedin}></span>
            </a>
            <a href="#" class="w-10 h-10 rounded-full bg-blue-900/50 flex items-center justify-center text-white hover:bg-white hover:text-blue-900 transition-all" aria-label="Facebook">
                <span class="w-5 h-5 block" set:html={icons.facebook}></span>
            </a>
            <a href="#" class="w-10 h-10 rounded-full bg-blue-900/50 flex items-center justify-center text-white hover:bg-white hover:text-blue-900 transition-all" aria-label="Instagram">
                <span class="w-5 h-5 block" set:html={icons.instagram}></span>
            </a>
        </div>
      </div>
    </div>
  </div>
</section>
