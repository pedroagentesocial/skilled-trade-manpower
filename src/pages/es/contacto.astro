---
import Layout from '../../layouts/Layout.astro';
import LeadForm from '../../components/LeadForm.astro';
import { useTranslations } from '../../utils/i18n';
import { icons } from '../../utils/icons';

const t = useTranslations('es');
---

<Layout title="Contacto">
  <div class="bg-blue-900 py-16 text-white text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">Contáctenos</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Discuta su proyecto con nuestro equipo de ejecución.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Póngase en Contacto</h2>
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="flex-shrink-0 mt-1 w-6 h-6 text-blue-600" set:html={icons['map-pin']}></div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-gray-900">Dirección</h3>
              <p class="text-gray-600">
                123 Main Street<br />
                Salt Lake City, UT 84101
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 mt-1 w-6 h-6 text-blue-600" set:html={icons.phone}></div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-gray-900">Teléfono</h3>
              <p class="text-gray-600">
                <a href="tel:5551234567" class="hover:text-blue-600 transition-colors">(555) 123-4567</a>
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 mt-1 w-6 h-6 text-blue-600" set:html={icons.envelope}></div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-gray-900">Correo Electrónico</h3>
              <p class="text-gray-600">
                <a href="mailto:info@skilledtrademanpower.com" class="hover:text-blue-600 transition-colors">info@skilledtrademanpower.com</a>
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
             <div class="flex-shrink-0 mt-1 w-6 h-6 text-blue-600" set:html={icons.clock}></div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-gray-900">Horario</h3>
              <p class="text-gray-600">
                Lunes - Viernes: 8:00 AM - 5:00 PM<br />
                Sábado - Domingo: Cerrado
              </p>
            </div>
          </div>
        </div>
      </div>

      <LeadForm />
    </div>
  </div>
</Layout>
